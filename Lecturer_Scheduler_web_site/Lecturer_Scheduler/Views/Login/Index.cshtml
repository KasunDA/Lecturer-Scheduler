@model Lecturer_Scheduler.Controllers.LoginModel
@{
    ViewBag.Title = "כניסה";
}
<h2 align="center" style="font-family: Arial; font-style: normal; font-weight: bold; font-size: xx-large;">כניסה</h2>

    <link href="@Url.Content("~/graphics/StyleLogin1.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<br/><br/>


@using (Html.BeginForm())
{
     <div class="editor-label" align="center" style="font-weight: bold; font-family: Aharoni; font-size: medium" title="labelName">
        @Html.LabelFor(m => m.Username)
    </div>
    <div class="editor-label" name="id" align="center" style="font-weight: bold; font-family: Aharoni; font-size: medium " >
        @Html.TextBoxFor(m => m.Username)
        @Html.ValidationMessageFor(m => m.Username)
    </div>
    <br/><br/>
    <div class="editor-label" align="center" style="font-weight: bold; font-family: Aharoni; font-size: medium" title="labelPassword">
        @Html.LabelFor(m => m.Password)
    </div>
    <div class="editor-label" name="password" align="center">
        @Html.PasswordFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <br/><br/>
    <form action="">
    <div class="editor-label" align="center">
        <input  type="submit" value = "כניסה למערכת" class="button" align="right"  style="font-family: Aharoni; font-size: medium; font-weight: bold" />
      
    </div>
    </form>

    @Html.ValidationSummary()
    
}
